{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/yaus/json2regfile/master/src/J2R/j2r_schema.json",
  "title": "Json2Regfile",
  "description": "Describe register file by json",
  "type": "object",
  "definitions": {
    "valid_int": {
      "$id": "#valid_int",
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(\\d+)|(0x[0-9A-Fa-f]+)$"
        },
        { "type": "integer" }
      ]
    }
  },

  "properties": {
    "$schema": {},
    "Config": {
      "description": "",
      "type": "object",
      "properties": {
        "RegFileName": {
          "description": "Register File Name",
          "type": "string"
        },
        "AddressWidth": {
          "description": "Bitwidth of address",
          "type": "number",
          "minimum": 1
        },
        "DataWidth": {
          "description": "Bitwidth of databus",
          "type": "number",
          "minimum": 1
        },
        "BusType": {
          "description": "Read Write Bus Type",
          "type": "string"
        },
        "Pipeline": {
          "description": "",
          "type": "boolean"
        }
      },
      "required": ["RegFileName", "AddressWidth", "DataWidth"]
    },
    "RegFile": {
      "description": "Declare Register File",
      "type": "object",
      "properties": {
        "StartAddress": { "$ref": "#/definitions/valid_int" },
        "EndAddress": { "$ref": "#/definitions/valid_int" },
        "SpaceSize": {
          "anyOf": [
            {
              "type": "string",
              "pattern": "^(\\d+)|(0x[0-9A-Za-z]+)$"
            },
            { "type": "integer" }
          ]
        },
        "Reg": {
          "description": "Declare Registers",
          "type": "object",
          "patternProperties": {
            "^[A-Za-z_][A-Za-z0-9_]*$": {
              "description": "Register Name",
              "pattern": "^[A-Za-z_][A-Za-z0-9_]*$",
              "type": "object",
              "properties": {
                "Size": {
                  "description": "Number of byte",
                  "type": "integer"
                },
                "Address": {
                  "description": "Register address",
                  "anyOf": [
                    {
                      "type": "string",
                      "pattern": "^(\\d+)|(0x[0-9A-Za-z]+)$"
                    },
                    { "type": "integer" }
                  ]
                },
                "Field": {
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "description": "Field Name",
                      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$",
                      "type": "object",
                      "properties": {
                        "BitPosition": {
                          "anyOf": [
                            {
                              "type": "string",
                              "pattern": "^\\d+(:\\d+)?$"
                            },
                            { "type": "integer" }
                          ]
                        },
                        "DefaultValue": {
                          "anyOf": [
                            {
                              "type": "string",
                              "pattern": "^(\\d+)|(0x[0-9A-Za-z]+)$"
                            },
                            { "type": "integer" }
                          ]
                        },
                        "Type": {
                          "type": "string",
                          "enum": ["ro", "rw", "wc"]
                        }
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          },
          "additionalProperties": false
        }
      },
      "anyOf": [
        {
          "required": ["StartAddress", "EndAddress"]
        },
        {
          "required": ["StartAddress", "SpaceSize"]
        }
      ]
    }
  },
  "required": ["Config", "RegFile"]
}
